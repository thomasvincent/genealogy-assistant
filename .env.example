# Genealogy Research Assistant Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required: Claude API Key
# =============================================================================
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# =============================================================================
# Gramps Web Configuration (Optional)
# =============================================================================
# URL of your Gramps Web instance
GRAMPS_WEB_URL=http://localhost:5000

# Gramps Web credentials (if authentication is enabled)
GRAMPS_WEB_USER=
GRAMPS_WEB_PASS=

# Tree name in Gramps Web
GRAMPS_TREE_NAME=Family Tree

# Secret key for Gramps Web sessions (change in production!)
GRAMPS_SECRET_KEY=change-me-in-production

# =============================================================================
# Local Gramps Database (Optional)
# =============================================================================
# Path to local Gramps database directory
# Default: ./gramps-db
GRAMPS_DB_PATH=./gramps-db

# =============================================================================
# Search Provider API Keys (Optional)
# =============================================================================
# FamilySearch API credentials
# Register at https://www.familysearch.org/developers/
FAMILYSEARCH_APP_KEY=
FAMILYSEARCH_USERNAME=
FAMILYSEARCH_PASSWORD=

# Geneanet credentials (for user tree access)
GENEANET_USERNAME=
GENEANET_PASSWORD=

# =============================================================================
# Application Settings
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Data directory for GEDCOM files
DATA_DIR=./data

# =============================================================================
# Docker Compose Settings
# =============================================================================
# Ports (change if conflicts with other services)
API_PORT=8000
GRAMPS_WEB_PORT=5000
